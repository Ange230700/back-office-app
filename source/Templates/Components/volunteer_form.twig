{# Volunteer Form Partial #}
{% if error is defined and error %}
	<div class="text-red-600 mb-4">{{ error }}</div>
{% endif %}
<form method="POST" class="space-y-4" action="{{ actionUrl }}">
	<input
	type="hidden" name="csrf_token" value="{{ session.csrf_token }}">

	{# If volunteer is empty, we're in add mode so show name, email and password fields #}
	{% if volunteer is empty %}
		<div>
			<label for="nom" class="block text-sm font-medium text-gray-700">
				Nom
				<input type="text" id="nom" name="nom" class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Nom du bénévole" required>
			</label>
		</div>
		<div>
			<label for="email" class="block text-sm font-medium text-gray-700">
				Email
				<input type="email" id="email" name="email" class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Email du bénévole" required>
			</label>
		</div>
		<div>
			<label for="mot_de_passe" class="block text-sm font-medium text-gray-700">
				Mot de passe
				<input type="password" id="mot_de_passe" name="mot_de_passe" class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Mot de passe" required>
			</label>
		</div>
	{% endif %}

	{# Always show the role selection #}
	<div>
		<label for="role" class="block text-sm font-medium text-gray-700 mb-2">
			Rôle
			<select id="role" name="role" class="w-full mt-2 p-3 border border-gray-300 rounded-lg" required>
				<option value="participant" {% if volunteer.role is not defined or volunteer.role == 'participant' %} selected {% endif %}>Participant</option>
				<option value="admin" {% if volunteer.role is defined and volunteer.role == 'admin' %} selected {% endif %}>Admin</option>
			</select>
		</label>
	</div>

	{# Participation Checkboxes #}
	<div>
		<label class="block text-sm font-medium text-gray-700 mb-2">
			Participations
			{% if collectionsList is not empty %}
				<div class="grid grid-cols-1 md:grid-cols-2 gap-2">
					{% for collection in collectionsList %}
						<div class="flex items-center">
							<input type="checkbox" name="attendances[]" value="{{ collection.id }}" id="collection_{{ collection.id }}" class="mr-2" {% if collection.id in selectedCollections %} checked {% endif %}>
							<label for="collection_{{ collection.id }}" class="text-gray-700">
								{{ collection.collection_label|e }}
							</label>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<p class="text-gray-500">Aucune collecte n'est disponible pour l'instant.</p>
			{% endif %}
		</label>
	</div>

	{# Include the AddOrEditButtonsGroup partial #}
	{% include 'Components/add_or_edit_buttons.twig' with {
      cancelUrl: cancelUrl,
      cancelTitle: cancelTitle,
      buttonTitle: buttonTitle,
      buttonTextContent: buttonTextContent
  } %}
</form>
