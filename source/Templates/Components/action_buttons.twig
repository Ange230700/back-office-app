{# source/Templates/Components/action_buttons.twig #}

<div class="flex space-x-2">
	<a href="{{ editUrl }}" class="bg-cyan-950 hover:bg-blue-600 text-white px-4 py-2 rounded-lg shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200" title="{{ editTitle }}">
		Modifier
	</a>
	<a href="{{ deleteUrl }}" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg shadow-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-200" title="{{ deleteTitle }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
		Supprimer
	</a>
</div>

